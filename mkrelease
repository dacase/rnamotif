#! /bin/csh
#
#   make a tar file for "release"
#
#   Run this from the directory above this one, e.g.:
#       cd ..
#       rnamotif/mkrelease <version number>
#
#   Requires an argument for the version number
#   The "make clean" ensures that files like y.tab.c,
#   y.tab.h, etc are not put on the tar tape.
#
if( $#argv != 1 )then
	echo usage: $0 version
	exit 1
endif
make clean
set tarfile = rnamotif-$1.tar
echo making $tarfile
tar cvf $tarfile \
	rnamotif/README \
	rnamotif/COPYING.GNU \
	rnamotif/revision.history \
	rnamotif/iupac.codes \
	rnamotif/Makefile \
	rnamotif/config.h* \
	rnamotif/doc \
	rnamotif/src \
	rnamotif/efndata \
	rnamotif/test \
	rnamotif/descr
gzip -v $tarfile
